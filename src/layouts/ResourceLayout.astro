---
import Layout from "./Layout.astro";
import TagList from "../components/Utilities/TagList.astro";

const { frontmatter } = Astro.props;
const [coverImage, ...otherImages] = frontmatter.images;
const formattedDate = new Date(frontmatter.publishDate).toISOString().split("T")[0];
---

<Layout pageTitle={frontmatter.title} description={frontmatter.description}>
	<article class="container prose mx-auto max-w-4xl px-8 py-10">
		<div class="mb-6 flex flex-col items-center">
			<h1 class="mb-0 max-w-2xl text-center text-3xl">{frontmatter.title}</h1>
			<div class="gradient-card-bg my-4 rounded-2xl p-2">
				<div class="gradient-bg card my-0 h-[100%] rounded-2xl bg-base-100 shadow-xl">
					<img
						id="cover-image"
						src={coverImage.url}
						alt={coverImage.alt}
						class="m-4 max-h-[325px] rounded-2xl object-cover md:max-h-[425px]"
					/>
				</div>
			</div>
			<p class="my-0 text-center text-xs sm:text-sm">
				Created by <a class="link link-accent" href="/about"
					><strong>{frontmatter.author}</strong></a
				> on <a class="btn btn-outline btn-xs h-auto px-1 py-0">{formattedDate}</a>
			</p>
			<TagList tags={frontmatter.tags} contentType="resources" />
			<hr class="mb-0 mt-4 w-full max-w-md border text-base-content" />
		</div>
		<slot />
	</article>
</Layout>
