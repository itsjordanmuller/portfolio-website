---
import TagList from "../components/TagList.astro";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
const [coverImage, ...otherImages] = frontmatter.images;
const formattedDate = new Date(frontmatter.publishDate).toISOString().split("T")[0];
---

<Layout pageTitle={frontmatter.title}>
	<article class="container prose mx-auto max-w-4xl p-6">
		<div class="mb-6 flex flex-col items-center">
			<h1 class="mb-0">{frontmatter.title}</h1>
			<img
				src={coverImage.url}
				alt={coverImage.alt}
				class="contain mb-0 aspect-[5/3] w-2/3 max-w-[800px] rounded-2xl object-cover"
			/>
			<p class="text-xs sm:text-sm">
				Created by <strong>{frontmatter.author}</strong> on <a
					class="btn btn-outline btn-xs h-auto px-1 py-0">{formattedDate}</a
				>
			</p>
			<TagList tags={frontmatter.tags} />
		</div>
		<slot />
	</article>
</Layout>
