---
import Layout from "./Layout.astro";
import { Image } from "astro:assets";
import ContentDetails from "../components/Utilities/ContentDetails.astro";

const { frontmatter } = Astro.props;
const formattedDate = new Date(frontmatter.publishDate).toISOString().split("T")[0];
---

<Layout pageTitle={frontmatter.title} description={frontmatter.description}>
	<article class="container prose mx-auto max-w-5xl px-8 py-10">
		<header class="flex flex-col items-center">
			<h1 class="mb-0 max-w-2xl text-center text-3xl">{frontmatter.title}</h1>
			<div class="gradient-card-bg my-4 max-w-2xl rounded-2xl p-2 shadow-2xl">
				<figure class="gradient-bg card my-0 max-w-full rounded-2xl bg-base-100 p-2 shadow-xl">
					<Image
						src={frontmatter.cover}
						alt={frontmatter.coverAlt}
						class="my-0 aspect-[2/1] max-w-full rounded-2xl object-cover"
						loading="eager"
					/>
				</figure>
			</div>
			<ContentDetails
				author={frontmatter.author}
				date={formattedDate}
				tags={frontmatter.tags}
				contentType="posts"
			/>
		</header>
		<h2 class="mt-10">{frontmatter.description}</h2>
		<slot />
	</article>
</Layout>
