---
import { Image } from "astro:assets";
import Layout from "./Layout.astro";
import TagList from "../components/Utilities/TagList.astro";
import Site from "../icons/ui/Site.astro";
import GitHubLogo from "../icons/logos/social/GitHubLogo.astro";

const { frontmatter } = Astro.props;
const formattedDate = new Date(frontmatter.publishDate).toISOString().split("T")[0];
const showGitHubRepo = frontmatter.repo !== "N/A";
const showLiveDemo = frontmatter.demo !== "N/A";
const showCard = showGitHubRepo || showLiveDemo;
---

<Layout pageTitle={frontmatter.title} description={frontmatter.description}>
	<article class="container prose mx-auto max-w-5xl px-8 py-10">
		<div class="mb-6 flex flex-col items-center">
			<h1 class="mb-0 max-w-2xl text-center text-3xl">{frontmatter.title}</h1>
			{
				showCard && (
					<div class="card mt-4 bg-base-300 p-2">
						<div class="flex flex-row flex-wrap justify-center gap-2 rounded-xl bg-base-100 p-2">
							{showLiveDemo && (
								<a href={frontmatter.demo} class="btn btn-error btn-sm h-auto">
									<Site size="24" />
									Live Demo
								</a>
							)}
							{showGitHubRepo && (
								<a href={frontmatter.repo} class="btn btn-secondary btn-sm h-auto">
									<GitHubLogo size="24" />
									GitHub Repo
								</a>
							)}
						</div>
					</div>
				)
			}
			<div class="gradient-card-bg my-4 max-w-2xl rounded-2xl p-2 shadow-2xl">
				<div class="gradient-bg card my-0 max-w-full rounded-2xl bg-base-100 p-2 shadow-xl">
					<Image
						src={frontmatter.cover}
						alt={frontmatter.coverAlt}
						class="my-0 max-w-full rounded-2xl object-cover"
					/>
				</div>
			</div>
			<p class="mb-2 mt-0 text-center text-xs sm:text-sm">
				Created by <a class="link link-accent" href="/about"
					><strong>{frontmatter.author}</strong></a
				> on <a class="btn btn-outline btn-xs h-auto px-1 py-0">{formattedDate}</a>
			</p>
			<div class="card my-2 max-w-2xl bg-base-300 p-2">
				<div class="card bg-base-100">
					<TagList tags={frontmatter.tags} contentType="projects" />
				</div>
			</div>
			<hr class="mb-0 mt-10 w-full max-w-md border text-base-content" />
		</div>
		<slot />
	</article>
</Layout>
