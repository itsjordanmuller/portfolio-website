---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import RecentPosts from "../components/RecentPosts.astro";
import RecentProjects from "../components/RecentProjects.astro";
const pageTitle = "Jordan Muller - Welcome";
const description =
	"Welcome to Jordan Muller's Web Development Portfolio. Discover my latest blog posts and projects. Explore to learn more about who I am & what I do.";
---

<Layout pageTitle={pageTitle} description={description}>
	<div class="bg-base-100" data-pagefind-ignore="all">
		<Hero />
		<div class="container mx-auto text-base-content">
			<div class="container prose mx-auto max-w-none px-6">
				<section>
					<h2 id="introduction" class="mt-0 pt-12 text-center">Welcome & Introductions</h2>
					<p class="indent-6 md:text-lg lg:px-24">
						Welcome to my personal website and digital portfolio! My name is Jordan & I'm a new
						graduate with a Bachelor of Science in Computer Science, based in the San Francisco Bay
						Area.
					</p>
					<p class="indent-6 md:text-lg lg:px-24">
						Feel free to explore my website to see how my academic journey has shaped my skills and
						prepared me for the dynamic world of technology.
					</p>
					<div class="flex justify-center">
						<a href="/about" class="btn btn-outline btn-sm w-full max-w-xs md:max-w-sm lg:max-w-md"
							>Learn More About Me</a
						>
					</div>
					<hr />
				</section>
				<RecentProjects />
				<hr />
				<RecentPosts />
			</div>
		</div>
	</div>
</Layout>
