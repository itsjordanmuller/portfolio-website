---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import RecentPosts from "../components/RecentPosts.astro";
import RecentProjects from "../components/RecentProjects.astro";
import WelcomeIntro from "../components/WelcomeIntro.astro";

const pageTitle = "Jordan Muller - Welcome";
const description =
	"Welcome to Jordan Muller's Portfolio Website. Discover my latest blog posts and programming projects. Explore to learn more about me and my current work.";
---

<Layout pageTitle={pageTitle} description={description}>
	<div class="bg-base-100" data-pagefind-ignore="all">
		<Hero />
		<div class="container mx-auto text-base-content">
			<div class="container prose mx-auto max-w-none px-6">
				<WelcomeIntro />
				<RecentProjects />
				<hr />
				<RecentPosts />
			</div>
		</div>
	</div>
</Layout>
