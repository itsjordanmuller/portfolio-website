---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
const pageTitle = "Contact - Jordan Muller";
---

<Layout pageTitle={pageTitle}>
	<section class="bg-200 container prose mx-auto px-6 py-10">
		<h1 class="my-0 text-center text-3xl">Contact Me</h1>
		<ul class="menu menu-horizontal w-full rounded-box bg-base-300">
			<li class="w-1/2">
				<a
					href="mailto:itsjordanmuller@gmail.com"
					class="link my-0 flex w-full items-center justify-center rounded-box bg-[#ff6a6a] p-2 text-base no-underline transition-all duration-300 hover:bg-[#a61168] md:text-xl"
				>
					<Icon name="mdi:email" class="mr-2 h-5 w-5" />Email Me
				</a>
			</li>
			<li class="w-1/2">
				<a
					href="tel:19257913526"
					class="link my-0 flex w-full items-center justify-center rounded-box bg-[#ffb05c] p-2 text-base no-underline transition-all duration-300 hover:bg-[#a61168] md:text-xl"
				>
					<Icon name="mdi:phone-message" class="mr-2 h-5 w-5" />Call/Text Me
				</a>
			</li>
		</ul>
		<form>
			<label class="form-control w-full max-w-none">
				<div class="label">
					<span class="label-text">What is your name?</span>
				</div>
				<input type="text" placeholder="Name" class="input input-bordered w-full max-w-none" />
				<div class="label"></div>
			</label>
			<label class="form-control w-full max-w-none">
				<div class="label">
					<span class="label-text">What is your email?</span>
				</div>
				<input
					type="email"
					placeholder="E-mail Address"
					class="input input-bordered w-full max-w-none"
				/>
				<div class="label"></div>
			</label>
			<label class="form-control">
				<div class="label">
					<span class="label-text">Message:</span>
				</div>
				<textarea class="textarea textarea-bordered h-48" placeholder="Write a detailed message"
				></textarea>
			</label>
			<button type="submit" class="btn btn-outline btn-accent mt-8 w-full max-w-none"
				>Send Message</button
			>
		</form>
	</section>
</Layout>
