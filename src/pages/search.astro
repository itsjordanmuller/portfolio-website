---
import PageFind from "../components/PageFind.astro";
import SearchLayout from "../layouts/SearchLayout.astro";

const pageTitle = "Search - Jordan Muller";
const description =
	"Looking for something specific on my site? Use the Search page to easily navigate through my content, including blogs, projects, pages and resources.";
---

<SearchLayout pageTitle={pageTitle} description={description}>
	<div class="container mx-auto min-h-[90svh] py-10 text-base-content" data-pagefind-ignore="all">
		<div class="container prose max-w-none px-6 text-center">
			<h1>Search for Posts, Projects & Resources</h1>
			<PageFind />
		</div>
	</div>
</SearchLayout>
