---
import Layout from "../layouts/Layout.astro";
import SocialImage from "../components/SocialImage.astro";
import SocialLinksMenu from "../components/SocialLinksMenu.astro";

const pageTitle = "Social - Jordan Muller";
const description =
	"Let's connect with each other online and stay in touch! On my Social page, I share links to my various social media accounts across a variety of websites.";
---

<Layout pageTitle={pageTitle} description={description}>
	<section class="container prose mx-auto px-6 py-10">
		<h1 class="my-0 text-center text-3xl">Social Links</h1>
		<SocialImage />
		<p class="my-4 text-center text-lg">If we aren't already,<br />I'd love to get connected!</p>
		<p class="mb-8 text-center font-bold">You can find me on the following sites:</p>
		<SocialLinksMenu />
	</section>
</Layout>
