---
import { Image } from "astro:assets";
import AvatarImage from "../../images/Jordan-Muller.jpeg";
---

<div class="gradient-border max-w-[18rem] rounded-2xl p-2 shadow-xl lg:mb-12">
	<Image
		src={AvatarImage}
		alt="Jordan Muller Profile Picture"
		class="max-w-[16rem] rounded-2xl shadow-md shadow-[#00000080]"
	/>
</div>
<style>
	.gradient-border {
		background: linear-gradient(45deg, #dfa177 10%, #a61168 65%, #4c007e 100%);
	}
</style>
