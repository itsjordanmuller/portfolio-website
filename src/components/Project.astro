---
const { title, url, description, images } = Astro.props;
---

<div class="gradient-border rounded-2xl p-2 shadow-2xl shadow-[#00000080]">
	<div class="gradient-bg card h-[100%] rounded-2xl bg-base-100 shadow-xl">
		<figure class="m-0 w-full">
			<img src={images[0].url} alt={images[0].alt} class="mb-0" />
		</figure>
		<div class="prose card-body w-full max-w-none rounded-b-2xl bg-base-100">
			<h2 class="card-title mb-0">{title}</h2>
			<p>{description}</p>
			<div class="card-actions justify-end">
				<a href={url}><button class="btn btn-accent">View Project</button></a>
			</div>
		</div>
	</div>
</div>
<style>
	.gradient-border {
		background: linear-gradient(45deg, #dfa177 0%, #a61168 60%, #4c007e 100%);
	}
	.gradient-bg {
		background: linear-gradient(45deg, #ffb361 0%, #ff79c6 75%, #9761e2 100%);
	}
</style>
