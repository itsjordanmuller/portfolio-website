---
import { Image } from "astro:assets";
const { title, url, description, type, cover, coverAlt } = Astro.props;
---

<li class="gradient-card-bg rounded-2xl p-2 shadow-2xl">
	<div class="card my-0 h-[100%] rounded-2xl bg-base-100 shadow-xl">
		<figure class="m-0 w-full">
			<Image src={cover} alt={coverAlt} />
		</figure>
		<div class="prose card-body w-full max-w-none">
			<h2 class="card-title mb-0">{title}</h2>
			<p>{description}</p>
			<div class="card-actions justify-end">
				<a href={`/resources/${url}`} title=`View ${title}` class="btn btn-accent capitalize"
					>View {type}</a
				>
			</div>
		</div>
	</div>
</li>
<style>
	li {
		display: block;
		list-style: none;
		margin: 0;
	}
</style>
