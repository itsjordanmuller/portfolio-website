import ThemeToggle from "./Header/ThemeToggle.astro";
import LogoName from "./Header/LogoName.astro";
import SearchBtn from "./Header/SearchBtn.astro";
---

<header>
	<div class="container navbar mx-auto justify-between bg-base-100">
		<div class="navbar-start">
			<DropdownMenu />
		</div>
		<div class="navbar-center">
			<LogoName />
