---
const { question, answer } = Astro.props;
---

<div class="collapse bg-base-200">
	<input type="checkbox" />
	<div class="collapse-title pr-2 text-base font-medium">
		<strong class="mr-1 text-accent">Q.</strong>{` ${question}`}
	</div>
	<div class="collapse-content">
		<p class="my-0">
			<strong class="mr-1 text-secondary">A.</strong>{` ${answer}`}
		</p>
	</div>
</div>
